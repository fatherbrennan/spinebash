################################################################
# Spinebash
# -> App configuration file
################################################################
#
# Include static views
# {boolean}
#
USE_FRAME=false
USE_NAV=true

#
# Use 'defer' <script> attribute for JavaScript files
# {boolean}
#
JS_DEFER=false

#
# Script to run after spine build process (equal to 'spine <start|dev>... && npm start')
# {command}
#
# Usage: spine <start|dev> --script
#
SCRIPT_TAIL='npm start'

#
# Compress asset files
# {boolean}
#
COMPRESS_HTML=false
COMPRESS_CSS=false
COMPRESS_JS=false

#
# Asset compressors
# {command}
#
# Compression scripts to run in place of the default framework compressors
#
# Info
# -> Empty string or null value will default to framework compressors
# -> placeholder: 'INPUT' will be replaced with uncompressed file path/s from 'Resources/js/*.js'
# -> placeholder: 'OUTPUT' will be replaced with the outputed compressed file path (defined by 'OUTPUT_COMPRESSED_JS')
#
# Examples:
# USE_COMPRESSOR_HTML="html-minifier-terser --collapse-whitespace --remove-comments INPUT > OUTPUT"
# USE_COMPRESSOR_JS="terser INPUT -o OUTPUT"
#
USE_COMPRESSOR_HTML=
USE_COMPRESSOR_CSS=
USE_COMPRESSOR_JS=

#
# Define 'OUTPUT' basename for compressed asset file ('Public/*/OUTPUT')
# {string} valid file name
#
OUTPUT_UNCOMPRESSED_CSS='app.css'
OUTPUT_COMPRESSED_CSS='app.min.css'
OUTPUT_COMPRESSED_JS='app.min.js'
