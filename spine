#! /bin/bash
########################################################################
# Spine Console
########################################################################
# 
# @fatherbrennan
# 

# Get relative path
app="$(cd "$(dirname "${BASH_SOURCE[0]}")";pwd -P)/"

# Exit if no args
[ -z "$1" ] && echo -e "Invalid command: <<Empty argument>>\n Usage: spine <command>" && exit 1

# Return help
show_help()
{
    echo -e "\e[1mspine\e[0m\n Usage: $0 <command>\n\n\e[4mcommands\e[0m\n\n \e[1mdev, start\e[0m\n\tbuild app assets in dev mode\n\n \e[1mclear\e[0m\n\tclear the framework cache including assets\n\n \e[1m-h, --help\e[0m\n\tdisplay command info"
}

# Args
case $1 in
    dev | start)
        "${app}Framework/Scripts/dev.sh" "$app"
    ;;
    clear)
        "${app}Framework/Scripts/cache_clear.sh" "$app"
    ;;
    -h | --help)
        show_help
    ;;
    *)
        echo -e "Invalid argument:\n Usage: $0 <command>";exit 1
    ;;
esac